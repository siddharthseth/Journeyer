<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/colorPrimary"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lchou.journeyer.ChoiceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Who are you?"
        android:textColor="@color/textWhite"
        android:id="@+id/textView"
        android:textSize="50dp"
        android:fontFamily="sans-serif-thin"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="A host provides food, water, or shelter to a journeyer."
        android:textSize="25dp"
        android:textColor="@color/textWhite"
        android:id="@+id/textView2"
        android:fontFamily="sans-serif-thin"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/journeyerButton"
        android:src="@drawable/journeyer"
        android:nestedScrollingEnabled="false"
        android:longClickable="false"
        android:layout_above="@+id/imageView"
        android:layout_marginBottom="-15dp"
        android:onClick="onClick"/>

    <ImageView
        android:scaleType="fitXY"
        android:layout_width="275dp"
        android:layout_height="150dp"
        android:src="@drawable/path"
        android:id="@+id/imageView"
        android:layout_alignStart="@+id/textView"
        android:layout_above="@id/textView2"
        android:layout_marginBottom="40dp"
        android:contentDescription="path"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="HOST"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/textWhite"
        android:id="@+id/textView3"
        android:layout_marginTop="36dp"
        android:layout_alignTop="@+id/hostButton"
        android:layout_toLeftOf="@+id/hostButton"
        android:layout_toStartOf="@+id/hostButton" />

    <ImageButton
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_width="105dp"
        android:layout_height="125dp"
        android:id="@+id/hostButton"
        android:src="@drawable/shelter"
        android:nestedScrollingEnabled="false"
        android:longClickable="false"
        android:layout_marginBottom = "10dp"
        android:layout_alignBottom="@id/imageView"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:onClick="onClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="JOURNEYER"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/textWhite"
        android:id="@+id/textView4"
        android:layout_marginTop="46dp"
        android:layout_alignTop="@+id/journeyerButton"
        android:layout_toRightOf="@+id/journeyerButton"
        android:layout_marginLeft="-15dp"/>

</RelativeLayout>
